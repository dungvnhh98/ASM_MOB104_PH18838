<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/item_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/lnear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/iteam_img"
            android:scaleType = "centerCrop"
            android:src="@drawable/loading"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÊN TRUYỆN"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="#E40505"
            android:id="@+id/iteam_tenTruyen"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="2"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width= "wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/luotxem"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/iteam_luotXem"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width= "wrap_content"
                android:layout_height="wrap_content"
                >
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.20"
                    android:scaleY="0.20"
                    android:id="@+id/checkboxhome"
                    android:layout_marginTop="-30dp"
                    android:layout_marginRight="-30dp"
                    android:layout_marginBottom="-30dp"
                    android:layout_marginLeft="-40dp"
                    android:button="@drawable/checkboxcustom"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:layout_gravity="center"
                    android:id="@+id/item_luotthich"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>